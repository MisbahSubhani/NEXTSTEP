{
    "compilerOptions": {
      "target": "ES2020",                    // Modern JS output
      "module": "CommonJS",                  // Node.js uses CommonJS (or ESM if needed)
      "outDir": "./dist",                    // Compiled files go to dist/
      "rootDir": "./src",                    // Source files
      "strict": true,                        // Best practices
      "esModuleInterop": true,               // To allow default imports from CommonJS
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,             // If you're importing JSON files
      "noImplicitAny": false
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  