{
  "compilerOptions": {
    "target": "ES2020",                       // Compatible target for Node.js
    "module": "CommonJS",                     // Use CommonJS for Node.js
    "lib": ["ESNext"],                        // Use latest JS features
    "rootDir": "./src",                       // Source folder
    "outDir": "./dist",                       // Compiled output
    "moduleResolution": "node",               // Node.js style module resolution
    "esModuleInterop": true,                  // For compatibility with common JS packages
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
